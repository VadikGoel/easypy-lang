use gui

# 1. Define a Class (Limitation REMOVED)
class AppConfig {
    func __init__(self) {
        self.title = "Unlimited App"
        self.count = 0
    }
}

config = AppConfig()

# 2. Define a Function (Limitation REMOVED)
func on_click() {
    config.count = config.count + 1
    print("Clicked! Count is now:", config.count)
    
    # 3. Complex Logic (Limitation REMOVED)
    if (config.count > 3 and config.count < 10) {
        print("Keep going!")
    } elif (config.count >= 10) {
        print("Wow, high score!")
    }
}

# 4. GUI Usage
app = gui.create_app(config.title, 300, 200)
lbl = gui.label(app, "Press the button (Check Console)")
btn = gui.button(app, "Click Me", on_click) # We pass the function!

gui.show(app)
