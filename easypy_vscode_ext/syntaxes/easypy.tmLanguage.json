{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Easypy",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
        {
            "include": "#functions"
        }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.easypy",
				"match": "\\b(if|else|elif|while|for|loop|use|func|class|var|return|break|continue)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.easypy",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.easypy",
					"match": "\\\\."
				}
			]
		},
        "functions": {
            "patterns": [{
                "name": "entity.name.function.easypy",
                "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
            }]
        }
	},
	"scopeName": "source.easypy"
}
